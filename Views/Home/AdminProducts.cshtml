@model IEnumerable<ScanAndGo.Models.Product>
@{
    ViewBag.Title = "AdminProducts";
}



<h2>Available Products</h2>
@Html.ActionLink("Add New", "newRecord", null, new { @class = "btn btn-primary" })
<br />

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Price)</th>
        <th>@Html.DisplayNameFor(model => model.Active)</th>
        <th>@Html.DisplayNameFor(model => model.stockingDate)</th>
        <th>@Html.DisplayNameFor(model => model.categoryId)</th>

        <th><b>Edit</b></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Price)</td>
            <td>@Html.DisplayFor(modelItem => item.Active)</td>
            <td>@Html.DisplayFor(modelItem => item.stockingDate)</td>
            <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>

            <td>
                @Html.ActionLink("Update", "updateRecord", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Not Available", "deleteRecord", new { id = item.Id }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }
</table>
<h4>@Html.ActionLink("Back", "AdminIndex", "Home")</h4>

